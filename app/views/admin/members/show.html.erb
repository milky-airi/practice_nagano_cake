<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>
    <div class="col-md-12">

      <h3 class="mb-3"><%= @member.family_name + @member.first_name %>さんの会員詳細</h3>

      <table class="mb-3">
        <tr>
          <td>会員ID</td>
          <td><%= @member.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= @member.family_name + "　" + @member.first_name %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= @member.family_name_kana + "　" + @member.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @member.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @member.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @member.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @member.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @member.is_deleted == true %>
              <p class="text-secondary"><strong>退会</strong></p>
            <% else %>
              <p class="text-success"><strong>有効</strong></p>
            <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_member_path, class: "btn btn-success" %>
       <!--link_to "顧客別注文履歴一覧を見る", admin_orders_per_member_path(member_id: @member.id), class: "btn btn-info" %>-->
      <%= link_to "この方の注文履歴一覧", admin_orders_per_member_path(member_id: @member.id), class: "btn btn-info" %>

    </div>
    <%= render 'admin/shared/footer.html.erb' %>
  </div>
</div>


