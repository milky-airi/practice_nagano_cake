<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>

    <div class="col-md-12">
      <h3>商品一覧</h3>

      <%= link_to "+", new_admin_item_path %>

      <table class="table">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.is_active %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <%= render 'admin/shared/footer.html.erb' %>
  </div>
</div>


