<div class="container p-3">
  <div class="row">
    <%= render 'admin/shared/header.html.erb' %>

  <div class="col-md-5 col-md-offset-2">
    <%= flash[:notice] %>
    <h3 class="mb-3">商品詳細</h3>
    <div class="item-details">
      <%= image_tag @item.image, size: "300x200" %>
    </div>
  </div>

  <div class="col-md-5">
    <div class="item-details mt-5">
      <table class="mb-3">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.detail %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格(税抜価格)</td>
          <td><%= @item.price.to_s(:delimited) %>(<%= (@item.price/1.1).floor(0).to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success"><strong>販売中</strong></p>
            <% else %>
              <p class="text-secondary"><strong>販売停止</strong></p>
            <% end %>
          </td>
        </tr>
      </table>

      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>

    </div>
  </div>

    <%= render 'admin/shared/footer.html.erb' %>
  </div>
</div>


