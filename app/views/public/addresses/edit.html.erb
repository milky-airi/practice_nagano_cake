<div class="container p-3">
  <div class="row">
    <%= render 'public/shared/header.html.erb' %>

  <div class="col-md-12">

    <h3 class="mb-3">配送先編集</h3>

    <%= form_with model: @address, url: address_path(@address), method: :patch do |f|  %>
      <%= render "public/shared/error_messages", resource: @address %>

      <table class="mb-3">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_area :address, placeholder: "東京都渋谷区代々木神園0-0", style: "width:500px", rows: "1" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, placeholder: "令和道子" %></td>
        </tr>
      </table>

      <div class="actions text-right">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
    <% end %>

  </div>

    <%= render 'public/shared/footer.html.erb' %>
  </div>
</div>


