<div class="container p-3">
  <div class="row">
    <%= render 'public/shared/header.html.erb' %>

  <div class="col-md-12">

    <h3 class="mb-3">配送先登録・一覧</h3>

    <%= form_with model: @address, url: addresses_path, method: :post do |f|  %>
      <%= render "public/shared/error_messages", resource: @address %>

      <table class="mb-3">
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_area :address, placeholder: "東京都渋谷区代々木神園0-0", style: "width:500px", rows: "1" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, placeholder: "令和道子" %></td>
          <td> <%= f.submit "新規登録", class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>

    <table class="table">
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td></td>
      </tr>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.post_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success" %><%= link_to "削除する", address_path(address.id), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </table>

  </div>

    <%= render 'public/shared/footer.html.erb' %>
  </div>
</div>


