<div class="container p-3">
  <div class="row">
    <%= render 'public/shared/header.html.erb' %>
      <div class="col-md-12">

        <h3 class="mb-3">新規会員登録</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>

          <table class="mb-3">
            <tr>
              <td>名前</td>
              <td>(姓)</td>
              <td><%= f.text_field :family_name, placeholder: "令和", autofocus: true %></td>
              <td>(名) </td>
              <td><%= f.text_field :first_name, placeholder: "道子" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td>(セイ)</td>
              <td><%= f.text_field :family_name_kana, placeholder: "レイワ" %></td>
              <td>(メイ)</td>
              <td><%= f.text_field :first_name_kana, placeholder: "ミチコ" %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td></td>
              <td><%= f.email_field :email, placeholder: "sample@example.com" %></td>
            </tr>
            <tr>
              <td >郵便番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td></td>
              <td colspan="3"><%= f.text_area :address, placeholder: "東京都渋谷区代々木神園0-0", style: "width:100%", rows: "1" %></td>
            </tr>
            <tr>
              <td>電話番号(ハイフンなし)</td>
              <td></td>
              <td><%= f.text_field :telephone_number, placeholder: "00000000000" %></td>
            </tr>
            <tr>
              <td>パスワード(6文字以上)</td>
              <td></td>
              <td><%= f.password_field :password, autocomplete: "new-password" %></td>
            </tr>
            <tr>
              <td>パスワード(確認用)</td>
              <td></td>
              <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
            </tr>
          </table>

          <div class="actions mb-5">
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </div>

        <% end %>

        <h3>すでに登録済みの方 </h3>
        <p><%= link_to "こちら", new_member_session_path %>からログインしてください。</p>

    </div>
    <%= render 'public/shared/footer.html.erb' %>
  </div>
</div>