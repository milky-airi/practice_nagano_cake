<div class="genre_search">
  <table class="table table-light table-hover">

    <tr>
      <thead class="table">
        <!--<th class="border-bottom">ジャンル検索</th>-->
        <td><p class="border-bottom pb-4 "><strong>ジャンル検索</strong></p></td>
      </thead>
    </tr>

    <%= form_with url: genre_search_path, method: :get do |f| %>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, genre_search_path(genre_id: genre.id), method: :get, class: "text-dark" %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>